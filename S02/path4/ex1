<?php
declare(strict_types=1);

function calculateBMI(float $kg, float $m): string {
    if ($kg <= 0 || $m <= 0) {
        return "Invalid input";
    }

    $bmi = $kg / ($m * $m);
    $bmiRounded = round($bmi, 1);

    if ($bmi < 18.5) {
        $category = "Under";
    } elseif ($bmi < 25) {
        $category = "Normal";
    } else {
        $category = "Over";
    }

    return "BMI: {$bmiRounded} ({$category})";
}

// Example input
echo calculateBMI(65, 1.7);
?>
